html
    head
        style.
          body {
          padding-top: 20px;
          }
        link(rel='stylesheet', href='static/lib/bootstrap.min.css')
        script(src='static/lib/jquery-1.11.3.min.js')
        script(src='static/lib/bootstrap.min.js')
        
        title Sign In - Minecraft Market

        script.
          $(function() {
            if ($('#message').text().length > 0) {
              $('#alert').show();
              }
            });
          function hide_alert() {
          $('#alert').hide();
          }
    body
      .container
        .jumbotron
          h1 Minecraft Market
        .ul.nav.nav-pills(role='tablist')
          li.active(role='presentation')
            a(href='signin') Sign In
          li(role='presentation')
            a(href='createaccount') Create Account
        .page-header
          h1 Sign In
        .panel.panel-default
            .panel-body
              .alert.alert-danger#alert(style='display:none')
                a.close(href='#', data-dismiss='alert', aria-label='close', onclick='hide_alert()') &times;
                span#message #{message}
              .row
                .col-sm-4
                .col-sm-4
                  form(action='/signin', method='post')
                    .form-group
                      label(for='username') Username or #Bank ID:
                      input#username.form-control(type='text', name='username', autofocus='', maxLength=16)
                    .form-group
                      label(for='password') Password:
                      input#password.form-control(type='password', name='password')
                     .form-group
                      button.btn.btn-default(type='submit') Sign In
                  .col-sm-4